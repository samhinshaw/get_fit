extends partials/layout

block header
  p.title
    | Get Fit!
  p.subtitle
    | #{user.firstname}
    if partner.firstname !== ''
      | & #{partner.firstname} are gonna get fit! #{emoji}
    else
      | is gonna get fit! #{emoji}

block subnav
  include includes/overview_subnav

block content
  .container
    .columns.is-fullhd
      //- .column.is-2
      .column.is-6
        .card.overview-card
          header.card-header(class=`is-user`)
            a.card-header-title.is-size-4(href='/user') #{user.firstname}
            .card-header-icon.dropdown.is-hoverable.is-right(href='#', aria-label='more options')
              .dropdown-trigger
                span.icon
                  i.mdi.mdi-chevron-down(aria-hidden='true')
                //- button.button.is-info(aria-haspopup='true', aria-controls='dropdown-menu6')
                  span Right aligned
                  span.icon.is-small
                    i.fa.fa-angle-down(aria-hidden='true')
              .dropdown-menu(role='menu')
                .dropdown-content
                  .dropdown-item
                    p
                      //- em Sent at:
                      br
                      //- time #{moment(request.timeRequested).format('ddd, MMM Do, h:ma')}
          .card-content
            .content
              h5.is-size-5
                u Points:
              p #{pointTally.user.toFixed(1)}
          //- footer.card-footer
            a.card-footer-item.request-button.approve(href='#!') Approve
            a.card-footer-item.request-button.deny(href='#!') Deny
      .column.is-6
        .card.overview-card
          header.card-header(class=`is-partner`)
            a.card-header-title.is-size-4(href='/partner') #{partner.firstname}
            .card-header-icon.dropdown.is-hoverable.is-right(href='#', aria-label='more options')
              .dropdown-trigger
                span.icon
                  i.mdi.mdi-chevron-down(aria-hidden='true')
                //- button.button.is-info(aria-haspopup='true', aria-controls='dropdown-menu6')
                  span Right aligned
                  span.icon.is-small
                    i.fa.fa-angle-down(aria-hidden='true')
              .dropdown-menu(role='menu')
                .dropdown-content
                  .dropdown-item
                    p
                      //- em Sent at:
                      br
                      //- time #{moment(request.timeRequested).format('ddd, MMM Do, h:ma')}
          .card-content
            .content
              h5.is-size-5
                u Points:
              p #{pointTally.partner.toFixed(1)}
          //- footer.card-footer
            a.card-footer-item.request-button.approve(href='#!') Approve
            a.card-footer-item.request-button.deny(href='#!') Deny
      //- .column.is-2
