extends partials/layout

block header
  h1= title
  h2.subtitle= article.title

block content
  form(method='POST', action='/data/edit/' + article._id)
    .field
      label.label Title:
      .control
        input.input(name='title', type='text', value = article.title)
    .field
      label.label Author:
      .control.has-icons-left
        input.input(name='author', type='text', value = article.author)
        span.icon.is-small.is-left
          i.mdi.mdi-check.mdi-dark
    .field
      label.label Body:
      .control
        textarea.textarea(name='body') #{article.body}
    input.button.is-primary(type='submit', value='submit')