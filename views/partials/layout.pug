doctype html
html
  head
    title Get Fit!
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png")
    link(rel="manifest", href="/manifest.json")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#5bbad5")
    meta(name="apple-mobile-web-app-title", content="Get Fit")
    meta(name="application-name", content="Get Fit")
    meta(name="theme-color", content="#f0f0f0")
    link(rel='stylesheet', href='/css/bulma.css')
    link(rel='stylesheet', href='/bower_components/mdi/css/materialdesignicons.min.css')
    //- link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/styles.css')

  body
    section.hero.is-small(class='is-'+pageInfo.heroType)
      .hero-body
        .container
          .columns.is-vcentered
            .column
              block header
                p.title
                  | Home
                p.subtitle
                  | Welcome to 
                  strong the fit zone
                  //- |  with Bulma
      .hero-foot
        .container
          nav.tabs.is-boxed
            ul
              //- attributes based on IN-LINE conditionals!!!
              //- Setup T/F statements for is-active routing highlighting
              //- https://github.com/pugjs/pug/issues/240
              li(class=(pageInfo.route === "/"  ? 'is-active' : false))
                a(href="/") Home
              //- li(class=(pageInfo.route === "/data" ? 'is-active' : false))
              //-   a(href="/data/submit") Submit
              li(class=(pageInfo.route === "/sam" ? 'is-active' : false))
                a(href="/sam") 
                  | Sam
                  span.tag(style='margin-left: 1em;', class='is-danger')
                    | #{pointTally.sam.toFixed(1)}
              li(class=(pageInfo.route === "/amelia" ? 'is-active' : false))
                a(href="/amelia")
                  | Amelia
                  span.tag(style='margin-left: 1em;', class='is-danger')   
                    | #{pointTally.amelia.toFixed(1)}
              li(class=(pageInfo.route === "/account" ? 'is-active' : false))
                a(href="/account")
                  | My Account
        block subnav
    != messages('includes/message', locals)
    section.section
      block content
    script(type='text/javascript', src='/bower_components/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/bower_components/moment/min/moment.min.js')
    script.
      moment().format();
    script(type='text/javascript', src='/js/bundle.min.js')