//- block content-header


block content
  h3.is-size-3 Register
  br
  form(method='POST', action='/users/register')
    .field
      label.label Name:
      .control
        input.input(name='name', type='text')
    .field
      label.label Email:
      .control.has-icons-left
        input.input(name='email', type='text')
        span.icon.is-small.is-left
          i.mdi.mdi-check.mdi-dark
    .field
      label.label Calorie Goal:
      .control
        input.input(name='calGoal', type='number')
    .field
      label.label Username:
      .control
        input.input(name='username', type='text')
    .field
      label.label Password:
      .control
        input.input(name='password', type='password')
    .field
      label.label Confirm Password:
      .control
        input.input(name='passwordConfirm', type='password')
    input.button(type='submit', value='Submit')

